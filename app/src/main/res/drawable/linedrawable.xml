<!-- res/drawable/rounded_progress_drawable.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <!-- Set the radius to create rounded corners -->
            <corners android:radius="8dp" />
            <solid android:color="#87C8F4" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <!-- Set the radius to create rounded corners for the progress portion -->
                <corners android:radius="8dp" />
                <solid android:color="#0576FF" />
            </shape>
        </clip>
    </item>
</layer-list>
